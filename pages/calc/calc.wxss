/* pages/calc/.wxss */

.content {
    background-color: #CCCCCC;
    height: 100%;
    flex-direction: column;
    display: flex;
    font-family: "Microsoft YaHei";
}

.layout-top {
    width: 100%;
    margin-bottom: 30rpx;
}

.layout-bottom {
    width: 100%;
}

.screen {
    text-align: right;
    width: 100%;
    line-height: 260rpx;
    padding: 0 10rpx;
    font-weight: bold;
    font-size: 60px;
    box-sizing: border-box;
    border-top: 1px solid #FFFFFF;
}


.btn-group {
    width: 100%;
    height: 5rem;
    background-color: #FFFFFF;
    flex-direction: row;
    display: flex;
}

.item {
    width: 25%;
    margin-top: 1px;
    margin-right: 1px;
    align-items: center;
    justify-content: center;
    display: flex;
}

.iconBtn {

}

.zero {
    /*flex-grow: 2;*/
    width: 50%;
}

.orange {
    color: #0095cd;
    background-color: #f78d1d;
}

.blue {
    color: #ffcc11;
    background-color: #0095cd;
}